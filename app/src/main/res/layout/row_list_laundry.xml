<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/img_laundry"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no-image"/>

        <TextView
            android:id="@+id/tv_name_laundry"
            android:layout_toEndOf="@id/img_laundry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/name_profile"/>

        <ImageView
            android:layout_toStartOf="@id/tv_distance"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_location"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="3.0 km"/>


        <TextView
            android:id="@+id/tv_address_laundry"
            android:layout_toEndOf="@id/img_laundry"
            android:layout_below="@id/tv_name_laundry"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/dummy_address"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>